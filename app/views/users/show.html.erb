<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <div class="Card_info">
    クレジットカード
    <br>
    <%= "**** **** ****" + @card[:last4] %>
    <br><br>
    有効期限
    <br>
    <%= @card[:exp_month] %> 
    /
    <%= @card[:exp_month] %>
  </div>
  <br><br><br>


    ユーザー情報を編集<br>
  <div class="AccountPage__form">
    <%= form_for(current_user) do |f| %>
      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :name %>
        </div>
        <div class="FormField__input--normal">
          <%= f.text_field :name, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__label--normal">
          <%= f.label :email %>
        </div>
        <div class="FormField__input--normal">
          <%= f.email_field :email %>
        </div>
        <br>
      </div>
      <%= f.submit "Update", class: 'Button UserButton' %>
      <br><br><br>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    <br>
    <%= link_to "商品一覧へ戻る", root_path%>
    <% end %>
  </div>
</div>